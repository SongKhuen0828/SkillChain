{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist"
  },
  "include": [
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "apps",
    "packages"
  ]
}

